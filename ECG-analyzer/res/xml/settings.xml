<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preferencias_principal" >

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/tiposDist"
        android:entryValues="@array/tiposOrdenValores"
        android:key="distancePhoto"
        android:summary="Distancia desde la que se echa la foto"
        android:title="Distancia" />

    <PreferenceCategory android:title="Guardar foto" >
        <CheckBoxPreference
            android:key="savePhoto"
            android:summary="Si desea guardar las fotos en el telÃ©fono"
            android:title="Guardar fotos" />

        <EditTextPreference
            android:key="namePhoto"
            android:defaultValue="ECG"
            android:summary="Nombre que desea poner"
            android:title="Nombre foto" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/tiposFormat"
            android:entryValues="@array/tiposOrdenValores"
            android:key="typeFormat"
            android:summary="En que formato desea guardarlo"
            android:title="Formato" />
    </PreferenceCategory>
</PreferenceScreen>